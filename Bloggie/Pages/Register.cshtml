@page
@model Bloggie.Pages.RegisterModel
@{
}


<div class="container">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-6">

            <partial name="_Notification">

            <h1 class="mb-3 mt-5 h3"> Register</h1>

            <form method="post">
                <div class="mb-3">
                    <label class="form-label">Username</label>
                    <input type="text" class="form-control" asp-for="@Model.registerViewModel.Username"/>
                </div>

                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input type="email" class="form-control" asp-for="@Model.registerViewModel.Email" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Password</label>
                    <input type="password" class="form-control" asp-for="@Model.registerViewModel.Password" />
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn bg-dark text-light">Register</button>
                </div>
            </form>
        </div>
    </div>
</div>